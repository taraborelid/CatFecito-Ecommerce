# Configuración del servidor
PORT=5000
NODE_ENV=development

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=catfecito_db
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# JWT
JWT_SECRET=tu-jwt-secret
JWT_EXPIRES_IN=7d

# CORS
CLIENT_URL=http://localhost:3000

# Encriptación
BCRYPT_ROUNDS=10

# MercadoPago Configuration
MP_ACCESS_TOKEN=tu_access_token_de_mercadopago
MP_PUBLIC_KEY=tu_public_key #opcional para frontend
MP_WEBHOOK_SECRET=tu_webhook_secret #opcional
CURRENCY_ID=ARS

# URLs públicas
# BACKEND_URL: URL pública del backend (ngrok/cloudflared/tunnel para desarrollo)
# FRONTEND_URL: URL del frontend (local o producción)
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173